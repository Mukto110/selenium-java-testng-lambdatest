<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="LambdaTest Automation Suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="com.lambdatest.framework.listeners.TestListener" />
    </listeners>

    <!-- SMOKE TESTS -->
    <test name="Smoke Tests - Chrome">
        <parameter name="browser" value="chrome" />
        <groups>
            <run>
                <include name="smoke" />
                <include name="sanity" />
            </run>
        </groups>
        <classes>
            <class name="com.lambdatest.tests.auth.LoginTests" />
            <class name="com.lambdatest.tests.search.SearchTests" />
        </classes>
    </test>

    <!-- REGRESSION TESTS -->
    <test name="Regression Tests - Firefox">
        <parameter name="browser" value="firefox" />
        <groups>
            <run>
                <include name="regression" />
                <exclude name="ui" />
            </run>
        </groups>
        <classes>
            <class name="com.lambdatest.tests.cart.AddToCartTests" />
            <class name="com.lambdatest.tests.search.SearchTests" />
        </classes>
    </test>

    <!-- E2E TESTS -->
    <test name="E2E Tests - Edge">
        <parameter name="browser" value="edge" />
        <groups>
            <run>
                <include name="e2e" />
            </run>
        </groups>
        <classes>
            <class name="com.lambdatest.tests.e2e.LoginAfterPasswordChangeTest" />
            <class name="com.lambdatest.tests.e2e.SearchProductAfterLogin" />
        </classes>
    </test>
</suite>