<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="LambdaTest Automation Suite" parallel="tests" thread-count="4">
    <listeners>
        <listener class-name="com.lambdatest.framework.listeners.TestListener" />
    </listeners>

    <!-- ==========================
         Test 1: Auth Tests (Chrome)
         ========================== -->
    <test name="Auth Tests - Chrome">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.lambdatest.tests.auth.LoginTests" />
        </classes>
    </test>

    <!-- ==========================
         Test 2: Search Tests (Firefox)
         ========================== -->
    <test name="Search Tests - Firefox">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.lambdatest.tests.search.SearchTests" />
        </classes>
    </test>

    <!-- ==========================
         Test 3: E2E Tests (Edge)
         ========================== -->
    <test name="E2E Tests - Edge">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="com.lambdatest.tests.e2e.LoginAfterPasswordChangeTest" />
            <class name="com.lambdatest.tests.e2e.SearchProductAfterLogin" />
        </classes>
    </test>
</suite>