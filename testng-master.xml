<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Master Automation Suite" parallel="classes" thread-count="4" verbose="1">

    <listeners>
        <listener class-name="com.lambdatest.framework.listeners.TestListener"/>
    </listeners>

    <!-- ===========================
         GLOBAL PARAMETERS
         =========================== -->
    <parameter name="os" value="Windows 11"/>
    <parameter name="browser" value="chrome"/>

    <!-- ===========================
         PARALLEL EXECUTION SET
         =========================== -->
    <test name="Cross Functional Parallel Tests">
        <classes>
            <!-- Auth module -->
            <class name="com.lambdatest.tests.auth.LoginTests"/>
<!--            <class name="com.lambdatest.tests.auth.LogoutTests"/>-->
            <class name="com.lambdatest.tests.auth.RegisterTests"/>

            <!-- Cart module -->
<!--            <class name="com.lambdatest.tests.cart.AddToCartTests"/>-->

            <!-- Search module -->
<!--            <class name="com.lambdatest.tests.search.SearchTests"/>-->

            <!-- E2E module -->
            <class name="com.lambdatest.tests.e2e.LoginAfterPasswordChangeTest"/>
            <class name="com.lambdatest.tests.e2e.SearchProductAfterLogin"/>
        </classes>
    </test>

</suite>